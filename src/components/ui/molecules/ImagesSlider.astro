<div class="slider-container">
  {
    IMAGES.map((image) => {
      return (
        <div class="slider-container--img">
          <img src={image} alt="" />
        </div>
      );
    })
  }
</div>

<style>
  .slider-container {
    display: flex;
    align-items: center;
    gap: 50px;
    padding-left: 0;
  }
  .slider-container--img {
    min-width: 200px;
    max-height: 296px;
  }
  .slider-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  @media (min-width: 768px) {
    .slider-container {
      padding-left: 30px;
    }
    .slider-container--img {
      min-width: 400px;
      max-height: 600px;
    }
  }
</style>
<script>
  const sliderContainer = document.querySelector(
    '.slider-container'
  ) as HTMLDivElement;
  document.addEventListener('scroll', () => {
    const scrollPosition = window.scrollY;
    sliderContainer.style.transform = `translateX(-${scrollPosition / 6}%)`;
  });
</script>
