---
interface Props {
  className?: string;
  type?: 'button' | 'submit' | 'reset';
}

const { className, type } = Astro.props;
---

<button type={type} class:list={['button', className]}>
  <slot />
</button>
<style>
  .button {
    font-size: 40px;
    height: 66px;
    border: #0f0e0e 2px solid;
    transition: all 250ms ease;
    cursor: none;
    text-transform: uppercase;
    border-radius: 10px;
    padding: 0 13px;
  }
  .button:hover {
    background-color: #0f0e0e;
    color: #fff;
  }
</style>
